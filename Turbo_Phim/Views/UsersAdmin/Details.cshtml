@model Turbo_Phim.Models.ApplicationUser

@{
    ViewBag.Title = "Details"; 
    Layout = "~/Views/Shared/_Admin_layout.cshtml";
}

<div class="content">
    <div class="header-admin">
        <h1 class="page-title">Details</h1>
        <ul class="breadcrumb">
            <li><a href='@Url.Action("Index","AdminMain")'>Home</a> </li>
            <li><a href='@Url.Action("Index","UsersAdmin")'>Users</a> </li>
            <li class="active">Details</li>
        </ul>
    </div>

    <div class="main-content">


        <div>
            <h4>User</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>
            </dl>
        </div>
        <h4>List of roles for this user</h4>
        @if (ViewBag.RoleNames.Count == 0)
        {
            <hr />
            <p>No roles found for this user.</p>
        }

        <table class="table">

            @foreach (var item in ViewBag.RoleNames)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </table>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>



    </div>
</div>


