@model Turbo_Phim.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = null;
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form"}))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
       
        @Html.TextBoxFor(m => m.Email, new { @class="control-label", @placeholder="Email"})
        @Html.ValidationMessageFor(m => m.Email)
        <span class="help-block"></span>
    </div>
    <div class="form-group">
       
        @Html.PasswordFor(m => m.Password, new { @class = "control-label", @placeholder = "Mật khẩu" })
        @Html.ValidationMessageFor(m => m.Password)
        <span class="help-block"></span>
    </div>
    <div class="form-group">
       
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "control-label", @placeholder = "Nhập lại mật khẩu" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
        <span class="help-block"></span>
    </div>
    <div class="form-group">

        @Html.TextBoxFor(m => m.Name, new { @class = "control-label", @placeholder = "Họ và tên" })
        @Html.ValidationMessageFor(m => m.Name)
        <span class="help-block"></span>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Birthday, new { @class = "control-label", @placeholder = "Ngày sinh" })
        @Html.ValidationMessageFor(m => m.Birthday)
        <span class="help-block"></span>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Address, new { @class = "control-label", @placeholder = "Địa chỉ" })
        @Html.ValidationMessageFor(m => m.Address)
        <span class="help-block"></span>
    </div>
    <input type="submit" class="btn btn-success btn-block" value="Đăng ký">
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


