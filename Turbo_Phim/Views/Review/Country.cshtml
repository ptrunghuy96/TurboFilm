@model IEnumerable<Business.DanhMucNuocSanXuat>
@{
    ViewBag.Title = "Country";
    Layout = null;
}

<div class="btn-group">
    <button type="button" class="btn btn-danger">Nước sản xuất</button>
    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
    </button>

    <ul class="dropdown-menu" role="menu">
        <li role="presentation" class="divider"></li>
        <li>@Html.ActionLink("Tất cả nước sản xuất", "Index", new { page = 1 })</li>
        <li role="presentation" class="divider"></li>
        @foreach (Business.DanhMucNuocSanXuat country in Model)
           {
            <li>@Html.ActionLink(@country.TenNuoc, "ViewForCountry",  new { countryID = @country.MaSo })</li>
           }



    </ul>
</div>

