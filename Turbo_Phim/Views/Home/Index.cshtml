@model Turbo_Phim.Models.PhimViewModels

@{
    ViewBag.Title = "Trang chủ";
   // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">

    <div class="header-info">
        <h1>PHIM TOP</h1>
     
            <h1>@Model.TenPhim</h1>

            <p class="age"><a href="#">All Age</a> @Model.DienVien</p>

            <p class="review">Đánh giá &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;&nbsp;@Model.DiemDanhGia/10</p>

            <p class="review reviewgo">Thể loại &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; : &nbsp;&nbsp;@Model.TheLoai</p>

            <p class="review">Ngày phát hành &nbsp;&nbsp;&nbsp;&nbsp;: &nbsp;&nbsp;@Model.NgayPhatHanh</p>

            <p class="special">
                @Model.NoiDung
            </p>
            <a class="video" href="@Model.URL_Trailer"><i class="video1"></i>TRAILER</a>

        
    </div>
</div>

<div class="review-slider">
    <ul id="flexiselDemo1">
        <li><img src="~/Content/images/r1.jpg" alt="" /></li>
        <li><img src="~/Content/images/r2.jpg" alt="" /></li>
        <li><img src="~/Content/images/r3.jpg" alt="" /></li>
        <li><img src="~/Content/images/r4.jpg" alt="" /></li>
        <li><img src="~/Content/images/r5.jpg" alt="" /></li>
        <li><img src="~/Content/images/r6.jpg" alt="" /></li>
    </ul>


    <script type="text/javascript">
                $(window).load(function () {

                    $("#flexiselDemo1").flexisel({
                        visibleItems: 6,
                        animationSpeed: 1000,
                        autoPlay: true,
                        autoPlaySpeed: 3000,
                        pauseOnHover: false,
                        enableResponsiveBreakpoints: true,
                        responsiveBreakpoints: {
                            portrait: {
                                changePoint: 480,
                                visibleItems: 2
                            },
                            landscape: {
                                changePoint: 640,
                                visibleItems: 3
                            },
                            tablet: {
                                changePoint: 768,
                                visibleItems: 4
                            }
                        }
                    });
                });
    </script>

</div>


<div class="news">
    <div class="col-md-6 news-right-grid">
        <h3>Phim mới</h3>

        @Html.Action("filmNew", "Home")

    </div>


    <div class="col-md-6 news-right-grid">
        <h3>Đánh giá phim</h3>

        @Html.Action("showReview", "Home")       
    </div>
    <div class="clearfix"></div>
</div>



<div class="more-reviews">
    <ul id="flexiselDemo2">
        <li><img src="~/Content/images/m1.jpg" alt="" /></li>
        <li><img src="~/Content/images/m2.jpg" alt="" /></li>
        <li><img src="~/Content/images/m3.jpg" alt="" /></li>
        <li><img src="~/Content/images/m4.jpg" alt="" /></li>
    </ul>


    <script type="text/javascript">
                $(window).load(function () {

                    $("#flexiselDemo2").flexisel({
                        visibleItems: 4,
                        animationSpeed: 1000,
                        autoPlay: true,
                        autoPlaySpeed: 3000,
                        pauseOnHover: false,
                        enableResponsiveBreakpoints: true,
                        responsiveBreakpoints: {
                            portrait: {
                                changePoint: 480,
                                visibleItems: 2
                            },
                            landscape: {
                                changePoint: 640,
                                visibleItems: 3
                            },
                            tablet: {
                                changePoint: 768,
                                visibleItems: 3
                            }
                        }
                    });
                });
    </script>

</div>


