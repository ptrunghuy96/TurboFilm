@model Turbo_Phim.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Thay đổi mật khẩu";
    Layout = null;
}


<script>
    $(document).ready(function () {
        $('#changepass').modal({
            show: false,
            backdrop: 'static',
            keyboard: false
        });
    });
</script>

<div class="modal fade" id="changepass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="login-overlay" class="modal-dialog modal-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myModalLabel">Thay đổi mật khẩu</h4>
                        </div>
                        <div class="well">
                            @using (Ajax.BeginForm("ChangePassword", "Manage", new AjaxOptions { UpdateTargetId = "message" }, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="text-danger" id="message"></div>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Mật khẩu cũ" })
                                    @Html.ValidationMessageFor(m => m.OldPassword)
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Mật khẩu mới" })
                                    @Html.ValidationMessageFor(m => m.NewPassword)
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu mới" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <span class="help-block"></span>

                                    <input type="submit" class="btn btn-success btn-block" value="Cập nhật">
                                </div>
                            }
                            <script>
                                $(document).ready(function () {
                                    $('#changepass').modal();
                                });
                                function changepassSuccess() {
                                    $('#changepass').modal("hide");
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}