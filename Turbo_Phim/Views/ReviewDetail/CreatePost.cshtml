@model Turbo_Phim.Models.PhimViewModels

@{
    ViewBag.Title = "CreatePost";
}



<script type="text/javascript" src="@Url.Content("~/ckfinder/ckfinder.js")"></script>
<script type="text/javascript" src="@Url.Content("~/ckeditor/ckeditor.js")"></script>


<div class="reviews-section">

    <div >

        <div class="review">
            <div class="movie-pic">
                <a href="single.html"><img src="@Model.HinhAnh" alt="" /></a>
            </div>
            <div class="review-info">

                <a class="span" href="single.html"> <i>@Model.TenPhim</i></a>
                <p class="dirctr"><a href="">@Model.NuocSX, </a>@Model.NgayPhatHanh</p>
                <p class="ratingview">Đánh giá của trang:</p>
                <p class="ratingview">
                    &nbsp;@Model.DiemDanhGia / 10
                </p>
                <div class="clearfix"></div>
                <p class="ratingview c-rating">Đánh giá trung bình của người xem:</p>

                <p class="ratingview c-rating">
                    &nbsp; @Model.DiemDanhGiaTrungBinh / 10 (@Model.LuotDanhGia Lượt đánh giá)
                </p>
                <div class="clearfix"></div>
                <div class="yrw">
                    @*<div class="dropdown-button">
                            <select class="dropdown" tabindex="9" data-settings='{"wrapperClass":"flat"}'>
                                <option value="0">Đánh giá của bạn</option>
                                <option value="1">1. Tệ</option>
                                <option value="2">1.5. Dưới trung bình</option>
                                <option value="3">2. Trung bình</option>
                                <option value="4">2.5. Trên trung bình</option>
                                <option value="5">3. Xem được</option>
                                <option value="6">3.5. Tốt</option>
                                <option value="7">4.5. Rất tốt</option>
                                <option value="8">5. Tuyệt vời</option>
                            </select>
                        </div>*@

                    <div class="wt text-center">
                        <a class="button play-icon popup-with-zoom-anim" href="#small-dialog">Xem trailer</a>
                    </div>


                    <div id="small-dialog" class="mfp-hide">
                        <iframe src="@Model.URL_Trailer" frameborder="0" allowfullscreen></iframe>
                    </div>





                    <div class="clearfix"></div>
                </div>
                <p class="info">Diễn viên:&nbsp; @Model.DienVien</p>
                <p class="info">Đạo diễn: &nbsp; @Model.DaoDien</p>
                <p class="info">Thể loại:&nbsp; @Model.TheLoai</p>
                <p class="info">Thời lượng:&nbsp; @Model.ThoiLuong Phút</p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    @using (Html.BeginForm("CreateNewPost", "ReviewDetail", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.TextAreaFor(@model => @model.contentPost)

     


        <button type="submit">Thêm mới</button>

    }

    <script type="text/javascript">

        var editor = CKEDITOR.instances['editor1'];
        if (editor) { editor.destroy(true); }
        CKEDITOR.replace('contentPost', {

            enterMode: CKEDITOR.ENTER_BR,

        });
        CKFinder.SetupCKEditor(null, '@Url.Content("~/ckfinder/")');


    </script>
</div>








