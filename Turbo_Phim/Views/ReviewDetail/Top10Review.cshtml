@model IEnumerable<Turbo_Phim.Models.TopReviewModels>
@{
    ViewBag.Title = "Top10Review";
    Layout = null;
}

<div class="col-md-3 side-bar">


    <div class="entertainment">
        <h3>Top 10 các bài Review</h3>
        @foreach (Turbo_Phim.Models.TopReviewModels p in Model)
        {
            <ul>
                <li class="ent">
                    <a ><img src="~/Images/avatar_default.png" alt="" /></a>
                </li>
                <li>

                    <b>@Html.ActionLink(p.title, "Index", "ReviewDetail", new { IDPhim = p.MS_Phim, IDReview = p.MS_ReView }, new { @class = "a" })</b>
             
                  

                </li>
                <li>Được đăng bởi @p.UserName</li>
                <li>Lúc @p.postDate.ToString("dd/MM/yyyy hh:mm:ss")</li>
                <li>@p.totalRank lượt bình chọn</li>
                <div class="clearfix"></div>
            </ul>
        }
       
    </div>
  
</div>
<div class="clearfix"></div>

